@page
@model MiniProject.Pages.Appointments.EditModel

<h2>Edit Appointment</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Appointment.Id" />
            
            <div class="form-group mb-3">
                <label asp-for="Appointment.PatientId" class="control-label">Patient</label>
                <select asp-for="Appointment.PatientId" class="form-control" asp-items="Model.PatientList">
                </select>
                <span asp-validation-for="Appointment.PatientId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Appointment.AppointmentDate" class="control-label"></label>
                <input asp-for="Appointment.AppointmentDate" class="form-control" />
                <span asp-validation-for="Appointment.AppointmentDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Appointment.Reason" class="control-label"></label>
                <input asp-for="Appointment.Reason" class="form-control" />
                <span asp-validation-for="Appointment.Reason" class="text-danger"></span>
            </div>
             <div class="form-group mb-3">
                <label asp-for="Appointment.Status" class="control-label"></label>
                <select asp-for="Appointment.Status" class="form-control">
                    <option value="Scheduled">Scheduled</option>
                    <option value="Completed">Completed</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
                <span asp-validation-for="Appointment.Status" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Appointment.DoctorId" class="control-label"></label>
                <input asp-for="Appointment.DoctorId" class="form-control" />
                <span asp-validation-for="Appointment.DoctorId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
