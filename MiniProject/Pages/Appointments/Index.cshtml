@page
@model MiniProject.Pages.Appointments.IndexModel

<h2>Appointments</h2>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Patient</th>
            <th>Reason</th>
            <th>Doctor</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Appointments) {
        <tr>
            <td>@item.AppointmentDate</td>
            <td>@(item.Patient?.Name ?? "Unknown")</td>
            <td>@item.Reason</td>
            <td>@item.DoctorName</td>
            <td>@item.Status</td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a> |
                <a asp-page="/LabOrders/Create" asp-route-appointmentId="@item.Id">Add Lab</a>
            </td>
        </tr>
}
    </tbody>
</table>
