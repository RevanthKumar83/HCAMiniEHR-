@page
@model MiniProject.Pages.LabOrders.CreateModel

<h2>Create Lab Order</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="LabOrder.AppointmentId" class="control-label">Appointment</label>
                <select asp-for="LabOrder.AppointmentId" class="form-control" asp-items="Model.AppointmentList">
                    <option value="">-- Select Appointment --</option>
                </select>
                <span asp-validation-for="LabOrder.AppointmentId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LabOrder.TestName" class="control-label"></label>
                <input asp-for="LabOrder.TestName" class="form-control" />
                <span asp-validation-for="LabOrder.TestName" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="LabOrder.OrderDate" class="control-label"></label>
                <input asp-for="LabOrder.OrderDate" class="form-control" />
                <span asp-validation-for="LabOrder.OrderDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LabOrder.Status" class="control-label"></label>
                <select asp-for="LabOrder.Status" class="form-control">
                    <option value="Pending">Pending</option>
                    <option value="Completed">Completed</option>
                </select>
                <span asp-validation-for="LabOrder.Status" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LabOrder.Result" class="control-label"></label>
                <textarea asp-for="LabOrder.Result" class="form-control"></textarea>
                <span asp-validation-for="LabOrder.Result" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
