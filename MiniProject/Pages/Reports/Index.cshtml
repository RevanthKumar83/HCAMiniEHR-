@model MiniProject.Pages.Reports.IndexModel

<h2>Reporting Dashboard</h2>

<ul class="nav nav-tabs" id="reportTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button" role="tab">Pending Lab Orders</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="kpi-tab" data-bs-toggle="tab" data-bs-target="#kpi" type="button" role="tab">Patients w/o Follow-Up</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="doc-tab" data-bs-toggle="tab" data-bs-target="#doc" type="button" role="tab">Doctor Stats</button>
    </li>
</ul>

<div class="tab-content pt-3" id="myTabContent">
    <!-- Pending Lab Orders -->
    <div class="tab-pane fade show active" id="pending" role="tabpanel">
        <h4>Pending Lab Orders</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Order Date</th>
                    <th>Patient</th>
                    <th>Test</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model.PendingLabOrders)
                {
                    <tr>
                        <td>@x.OrderDate.ToShortDateString()</td>
                        <td>@x.Appointment?.Patient?.Name</td>
                        <td>@x.TestName</td>
                        <td>@x.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Patients Without Follow-Up -->
    <div class="tab-pane fade" id="kpi" role="tabpanel">
        <h4>Patients Without Follow-Up (No Future Appointments)</h4>
        <ul class="list-group">
            @foreach (var p in Model.PatientsNoFollowUp)
            {
                <li class="list-group-item">@p.Name (Last known info: @p.Phone)</li>
            }
        </ul>
    </div>

    <!-- Doctor Stats -->
    <div class="tab-pane fade" id="doc" role="tabpanel">
        <h4>Doctor Appointment Volume</h4>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Doctor Name</th>
                    <th>Total Appointments</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var d in Model.DoctorStats)
                {
                    <tr>
                        <td>@d.DoctorName</td>
                        <td>@d.AppointmentCount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
